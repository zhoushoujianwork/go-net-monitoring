# 环境配置示例文件
# 复制为 .env 文件并根据需要修改

# Debug模式 (true/false)
DEBUG_MODE=false

# 日志级别 (debug/info/warn/error)
LOG_LEVEL=info

# 主机名
HOSTNAME=netmon-agent

# 网络接口 (Agent使用)
NETWORK_INTERFACE=eth0

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 存储配置
STORAGE_TYPE=redis
STORAGE_TTL=1h

# Agent配置
SERVER_URL=http://localhost:8080/api/v1/metrics
REPORT_INTERVAL=10s
BUFFER_SIZE=1000
